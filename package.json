{
  "name": "snower",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "lint": "tslint -c tslint.json -p tsconfig.json ./src/ts/*.tsx",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix ./src/ts/*.tsx",
    "precommit": "lint-staged",
    "test": "jest",
    "start": "webpack-dev-server --config webpack.config.js --hot",
    "sw:generate": "workbox generateSW workbox-config.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c tslint.json -p tsconfig.json --fix",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupTestFrameworkScriptFile": "./src/test/setupTest.ts"
  },
  "dependencies": {
    "@material-ui/core": "^3.1.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "recompose": "^0.30.0",
    "styled-components": "^3.4.9"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/recompose": "^0.26.5",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.2.0",
    "prettier": "^1.14.3",
    "react-test-renderer": "^16.5.2",
    "ts-jest": "^23.10.0",
    "ts-loader": "^5.1.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^2.0.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "workbox-cli": "^3.6.1"
  }
}
