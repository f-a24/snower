{
  "name": "snower",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "lint": "tslint -c tslint.json -p tsconfig.json ./src/ts/*.tsx",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix ./src/ts/*.tsx",
    "precommit": "lint-staged",
    "test": "jest",
    "start": "webpack-serve --config webpack.config.js",
    "sw:generate": "workbox generateSW workbox-config.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c tslint.json -p tsconfig.json --fix",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupTestFrameworkScriptFile": "./src/test/setupTest.ts"
  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "styled-components": "^3.4.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.4.2",
    "jest-styled-components": "^6.1.1",
    "prettier": "^1.14.0",
    "react-test-renderer": "^16.4.2",
    "ts-jest": "^23.1.2",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-serve": "^2.0.2",
    "workbox-cli": "^3.4.1"
  }
}
